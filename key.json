{
  "title": "Keypad for Rectangle Window Snapping",
  "rules": [
    {
      "description": "Enable Num Lock Toggle",
      "manipulators": [
        {
          "description": "Set Numlock",
          "from": {
            "key_code": "keypad_num_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "Num Lock",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Num Lock",
              "value": 0
            }
          ],
          "type": "basic"
        },
        {
          "description": "Unset Numlock",
          "from": {
            "key_code": "keypad_num_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "Num Lock",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "Num Lock",
              "value": 0
            }
          ],
          "type": "basic"
        }
      ]
    },
